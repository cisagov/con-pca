    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Python Attach Controller",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/",
                    "remoteRoot": "/app"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1"
        },
        {
            "name": "Python Attach Init Script",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/",
                    "remoteRoot": "/app"
                }
            ],
            "port": 5679,
            "host": "127.0.0.1"
        },
        {
            "name": "Python Unit Test Debug",
            //add prelaunch task            
            "type": "python",
            "request": "attach",                    
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/",
                    "remoteRoot": "/app"
                }
            ],
            "port": 5680,
            "host": "127.0.0.1"
        },
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/src/",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django"
            }
        }
    ]
}